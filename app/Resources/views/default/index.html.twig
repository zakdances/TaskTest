{% extends 'base.html.twig' %}


{% block taskentry %}
<div id="task" class='task container' style='display: none;'>
    <div class='row align-items-center'>
        <div class='coll'>

        </div>
        <div class='col-1 status'>
            <button type="button" class="btn btn-light btn-sm" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><div class='fa fa-circle-o'></div></button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <a class="dropdown-item" data-value='0' href="javascript: void(0);">Not Done</a>
                <a class="dropdown-item" data-value='1' href="javascript: void(0);">In Progress</a>
                <a class="dropdown-item" data-value='2' href="javascript: void(0);">Completed</a>
            </div>
        </div>
        <div class='label col-6'>Read the documentation to learn</div>
        <div class='col-0 due-badge'>
            <span class="badge badge-pill badge-danger">Due Soon</span>
        </div>
        <div class='col time-label'>
            
            <span class='text'>
            <a href="https://symfony.com/doc/{{ constant('Symfony\\Component\\HttpKernel\\Kernel::VERSION')[:3] }}/page_creation.html">
                How to create your first page in Symfony
            </a>
            </span>
            
        </div>
        <div class='coll action-icons invisible'>
            <button type="button" class="btn btn-light btn-sm edit-button"><div class='fa fa-pencil fa-fw'></div></button>
            <button type="button" class="btn btn-light btn-sm delete-button"><div class='fa fa-trash fa-fw'></div></button>
        </div>
 
    </div>
</div>
{% endblock %}

{% block body %}
    
    {{ include('AppBar.html.twig') }}

    <div class="wrapper " style='padding-bottom: 3rem;'>
        <div class='column-labels borderr-b container' style='color: #757575; background-color: transparent;'>
            <div class='row '>
                <div class='col-1' style=''>
                    <small>Status</small>
                </div>
                <div class='col-6'><small>Label</small></div>
                <div class='col-0 due-badge invisible'>
                    <span class="badge badge-pill badge-danger">Due Soon</span>
                </div>
                <div class='col'><small>Due Date</small></div>
            </div>
        </div>

        {{ block('taskentry') }}
    
        <!-- Tasks -->
        <div id='tasks' class='tasks'>

        </div>



        
    </div>
    <!-- Modal -->
    <div class="modal fade" id="form-modal" tabindex="-1" role="dialog" aria-labelledby="form modal" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Add Task</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="modal-body">
            {# {% block taskform %}
            {% endblock %} #}
            {{ include('TaskForm.html.twig') }}
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="button" class="btn btn-primary" onclick="submitTaskForm()">Add Task</button>
        </div>
        </div>
    </div>
    </div>

    {# {{ block('simplemodal') }} #}
    {{ include('SimpleModal.html.twig') }}
{% endblock %}

{% block stylesheets %}
<style>
    


    code { background: #F5F5F5; max-width: 100px; padding: 2px 6px; word-wrap: break-word; }
    .wrapper { margin: 0 auto; max-width: 800px; width: 95%; }
    {# #container { padding: 2em; } #}
    {# #welcome, #status { margin-bottom: 2em; } #}
    #welcome h1 span { display: block; font-size: 75%; }
    #icon-status, #icon-book { float: left; height: 64px; margin-right: 1em; margin-top: -4px; width: 64px; }
    #icon-book { display: none; }

    @media (min-width: 768px) {
        #wrapper { width: 80%; margin: 2em auto; }
        #icon-book { display: inline-block; }
        #status a, #next a { display: block; }

        @-webkit-keyframes fade-in { 0% { opacity: 0; } 100% { opacity: 1; } }
        @keyframes fade-in { 0% { opacity: 0; } 100% { opacity: 1; } }
        .sf-toolbar { opacity: 0; -webkit-animation: fade-in 1s .2s forwards; animation: fade-in 1s .2s forwards;}
    }
    
</style>
{% stylesheets
    '@bootstrap_css'
    '@bootstrap_datepicker_css'
    '@font_awesome_css'
    '%kernel.root_dir%/Resources/public/css/*'
    filter='cssrewrite' %}
        <link rel="stylesheet" type="text/css" href="{{ asset_url }}"/>
{% endstylesheets %}
{% endblock %}
