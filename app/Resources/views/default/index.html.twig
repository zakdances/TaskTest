{% extends 'base.html.twig' %}


{% block taskform %}

<!-- Task Form -->
<form id='task-form' action="/createaction" method="post">
  <div class="form-group">
    <label for="inputLabel">Task Name</label>
    <input name="label" type="text" title='asdasa' class="form-control" id="inputLabel" aria-describedby="labelHelp" placeholder="" required>
    {# <small id="labelHelp" class="form-text text-muted">Give the task a name.</small> #}
    <div class="invalid-feedback" style='display: block; opacity: 0;'>
        Please enter a task label before saving.
      </div>
  </div>
  <div class="form-row">
    <div class='col'>
        <label for="inputDate">Due Date</label>
        {# <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password"> #}
        <br>

        <input name="dueDate" id="inputDate" type="text" class="form-control datepicker">
        <small id="dateHelp" class="form-text text-muted">When is this task due?</small>
    </div>
    <div class='col'>
        <label for="status-select">Status</label>
    {# <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password"> #}
    <br>

    <select name="status" id="status-select" class="bootstrap-select form-control">
        <option value="0" selected="selected">Not Done</option>
        <option value="1">In Progress</option>
        <option value="2">Completed</option>
    </select>
<small id="status-select-help" class="form-text text-muted">What's the status of this task?</small>
    </div>
  </div>
  
  {# <div class="form-check">
    <label class="form-check-label">
      <input type="checkbox" class="form-check-input">
      Check me out
    </label>
  </div> #}
  {# <button type="submit" class="btn btn-primary">Submit</button> #}
</form>
{% endblock %}

{% block taskentry %}
<div id="task" class='task container' style='display: none;'>
    <div class='row align-items-center'>
        <div class='coll'>

        </div>
        <div class='col-1 status'>
            <button type="button" class="btn btn-light btn" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"><div class='fa fa-circle-o'></div></button>
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <a class="dropdown-item" data-value='0' href="javascript: void(0);">Not Done</a>
                <a class="dropdown-item" data-value='1' href="javascript: void(0);">In Progress</a>
                <a class="dropdown-item" data-value='2' href="javascript: void(0);">Completed</a>
            </div>
        </div>
        <div class='label col-6'>Read the documentation to learn</div>
        <div class='col-0 due-badge'>
            <span class="badge badge-pill badge-danger">Due Soon</span>
        </div>
        <div class='col time-label'>
            
            <span class='text'>
            <a href="https://symfony.com/doc/{{ constant('Symfony\\Component\\HttpKernel\\Kernel::VERSION')[:3] }}/page_creation.html">
                How to create your first page in Symfony
            </a>
            </span>
            
        </div>
        <div class='coll action-icons invisible'>
            <button type="button" class="btn btn-outline-secondary btn-sm edit-button"><div class='fa fa-pencil fa-fw'></div></button>
            <button type="button" class="btn btn-outline-secondary btn-sm delete-button"><div class='fa fa-trash fa-fw'></div></button>
        </div>
 
    </div>
</div>
{% endblock %}

